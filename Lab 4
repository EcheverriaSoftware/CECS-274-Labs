import java.util.Random;
public class Lab_Warmup4
{
  public static void main(String [] args){
      Random rand = new Random();
      int upperBounds = 7;
      int key = 0;
      int computerScore = 0;
      int userScore = 0;
      int computerDice = 0;
      int userDice = 0;
     while(key < 10){
          computerDice = rand.nextInt(upperBounds) + 1;
          userDice = rand.nextInt(upperBounds) + 1;
          if(userDice > computerDice){
              userScore++;
              System.out.println("The user wins round " + (key + 1) + "!");
          }
          else if(computerDice > userDice){
              computerScore++;
              System.out.println("The computer wins round " + (key + 1) + "!");
          }
          else{
              System.out.println("Round " + (key + 1) + ", no winner here!");
          }
          key++;
      }
     if(computerScore > userScore){
         System.out.println("The computer is the grand winner with a score of: " + computerScore); 
     }
     else if(userScore > computerScore){
         System.out.println("The user is the grand winner with a score of: " + userScore);
     }
     else{
         System.out.println("Draw! No winner here!");
     }
  }
}
